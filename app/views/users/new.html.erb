<%= render partial: "layouts/error_messages", locals: {object: @user} %>

<h1>Signup: </h1><br>

<%= form_for(@user) do |u| %>

    <h4>Email: <%= u.text_field :email %><br><br><br> </h4>
    <h4>Name: <%= u.text_field :name %><br><br></h4>
    <h4>Password: <%= u.password_field :password %><br><br></h4>
    <h4>Confirm Password: <%= u.password_field :password_confirmation %> <br><br></h4>
    <br><br>

    <button class="btn btn-primary" type="submit" name="commit" value="Submit" data-disable-with="Submit">Submit</button>
<% end %> 