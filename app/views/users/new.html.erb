<%= render partial: "layouts/error_messages", locals: {object: @user} %>

<h1>Signup:</h1><br>

<%= form_for(@user) do |u| %>
<div class="center">

<div class="mb-3 center">
    <h4><label for="user_email" class="form-label">Email address</label></h4>
    <%= u.text_field :email, {class: "form-control"}%>
</div>

<div class="mb-3 center">
    <h4><label for="user_name" class="form-label">Name</label></h4>
    <%= u.text_field :name, {class: "form-control"}%>
</div>

<div class="mb-3 center">
    <h4><label for="user_password" class="form-label">Password</label></h4>
    <%= u.password_field :password, {class: "form-control"} %>
</div>

<div class="mb-3 center">
    <h5><label for="user_password_confirmation" class="form-label">Confirm Password</label></h5>
    <%= u.password_field :password_confirmation, {class: "form-control"} %>
</div>
<br><br>

<button class="btn btn-primary" type="submit" name="commit" value="Submit" data-disable-with="Submit">Submit</button>
<% end %> 
</div>