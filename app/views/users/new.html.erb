<% if @user.errors.full_messages.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %> <br>
  <% end %>
<% end %>

<h1>Create a New User: </h1><br>

<%= form_for(@user) do |u| %>
    Email: <%= u.text_field :email %><br><br><br>
    Name: <%= u.text_field :name %><br><br>
    Password: <%= u.password_field :password %><br><br>
    Confirm Password: <%= u.password_field :password_confirmation %> <br><br>
    <br><br>

    <%= u.submit 'Sign Up' %>
<% end %>