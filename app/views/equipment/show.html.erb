<div id="equipment-div">
</div>

<br><br>

<%# Shows equipment's reservations %>
<div id="equipment-reservations">
</div>
<br>
<a type="button" class="btn btn-info" onclick="getEquipmentReservations()">All Reservations for this Equipment</a>
<br><br>

<% if @equipment.available %>
<a type="button" class="btn btn-primary" href="<%=new_equipment_reservation_path(@equipment)%>">Reserve Equipment</a>
<% else %>
<div id="unavailable-equipment">
<h4>    Equipment Unavailable at this time.</h4>
</div>
<% end %>

<br><br><br><br>

<h4> <%= link_to 'Edit Equipment', edit_equipment_path, class: "btn btn-warning" unless !current_user.admin? %>
<h4> <%= link_to 'Delete Equipment', equipment_path(@equipment), method: :delete, data: { confirm: "Delete #{@equipment.name}" }, class: "btn btn-danger" unless !current_user.admin? %>
<br><br>

<a type="button" class="btn btn-info" href="/equipment">Back to All Equipment</a>
<script>
getEquipment();
</script>

